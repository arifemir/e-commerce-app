{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "format": "prettier --config ./.prettierrc.js  --write ./server/src ./client/src",
    "watch": "tsc -w",
    "compile": "tsc",
    "server": "nodemon server/dist/index.js",
    "prod": "node server/dist/index.js",
    "client": "npm run start --prefix client",
    "run-all": "concurrently \"yarn server\" \"yarn client\"",
    "compile-and-watch": "yarn compile && yarn watch",
    "dev": "concurrently \"yarn compile-and-watch\" \"yarn run-all\"",
    "data:import": "node server/dist/seeder",
    "data:destroy": "node server/dist/seeder -d"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "bcrypt": "^5.0.0",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.14",
    "stripe": "^8.144.0"
  }
}
